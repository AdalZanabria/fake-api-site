---
const API = 'https://api.escuelajs.co/api/v1/users';
const data = await fetch(API).then(r => r.json());
---
<div class='users-gallery'>
	{data.map((item) => (
    <div>
      <img loading="lazy" src={item.avatar} alt="user" />
      <div class='title'>
        <h5>{item.email}</h5>
      </div>
    </div>
  ))}
</div>

<style>
	.users-gallery {
    display: grid;
    grid-template-columns:  repeat(auto-fill, minmax(300px, 1fr));
    grid-gap: 15px;
  }
</style>
